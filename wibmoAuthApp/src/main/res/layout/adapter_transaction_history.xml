<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    android:background="@color/white">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:weightSum="2">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_weight="1">


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


            <ImageView
                android:id="@+id/circleView"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:src="@color/grey_color"
                android:layout_gravity="center" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="@dimen/Twelve"
                android:paddingBottom="@dimen/Eight">

                <TextView
                    android:id="@+id/merchantName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:text="AbhishekAbhishekAbhishekAbhishekAbhishekAbhishek"/>

                <TextView
                    android:id="@+id/productName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="textCapWords"
                    android:textSize="16sp"
                    android:text="AbhishekAbhishekAbhishekAbhishekAbhishekAbhishek"/>

                <TextView
                    android:id="@+id/dateTimeStamp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="AbhishekAbhishekAbhishekAbhishekAbhishekAbhishekAbhishekAbhishekAbhishek"/>

            </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center|right"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="8dp"
            android:layout_weight="1">

            <TextView
                android:id="@+id/amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="@dimen/TwentyEight"
                android:layout_marginTop="@dimen/Eight"
                android:gravity="center|right"
                android:text="shshshshshshshshshshshsssjsjsjsjsjsjsjsjsjsjsjhhsshshshshshshshshsh"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="right"
                android:gravity="right">

                <ImageView
                    android:id="@+id/notificationTypeImageView"
                    android:layout_width="@dimen/TwentyFour"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_push_notification"
                    android:layout_gravity="center"
                    android:layout_toLeftOf="@id/type"
                    android:tint="@color/brand_color" />

                <TextView
                    android:id="@+id/type"
                    android:layout_width="@dimen/EightyEight"
                    android:layout_height="@dimen/FourtyEight"
                    android:gravity="center|right"
                    android:layout_gravity="center|left"
                    android:paddingRight="@dimen/Eight"
                    android:textSize="@dimen/Fourteen" />

            </LinearLayout>



        </LinearLayout>

    </LinearLayout>




</RelativeLayout>