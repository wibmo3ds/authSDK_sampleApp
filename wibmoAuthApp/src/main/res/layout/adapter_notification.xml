<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/mainLayoutNotification"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
       android:layout_margin="@dimen/four"
        app:cardCornerRadius="4dp"
        android:background="@color/brand_color_dark">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <!-- <ImageView
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:src="@drawable/makemytrip"
                 android:id="@+id/imageViewAlertnotify"
                 android:background="@color/brand_blue_dark"/>-->

            <LinearLayout
                android:id="@+id/content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/TwentyEight"
                android:elevation="0dp"
                android:layout_marginLeft="8dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageViewAlertnotifysmall"
                    android:layout_width="42dp"
                    android:layout_height="42dp"
                    android:layout_gravity="center"></ImageView>
                
                
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/Eight"
                    android:layout_marginLeft="@dimen/Eight"
                    android:layout_marginRight="@dimen/Eight"
                    android:layout_marginTop="@dimen/Eight"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textViewAlertNotifyTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_toRightOf="@+id/imageViewAlertnotifysmall"
                        android:text="Meechant Name"
                        android:textSize="@dimen/TwentyFour"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/textViewMessage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignLeft="@+id/textViewAlertNotifyTitle"
                        android:layout_alignStart="@+id/textViewAlertNotifyTitle"
                        android:layout_below="@+id/textViewAlertNotifyTitle"
                        android:layout_marginBottom="@dimen/Two"
                        android:text="Transaction message"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textSize="@dimen/Fourteen"
                        android:visibility="visible"/>


                    <TextView
                        android:id="@+id/notificationTag"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/textViewAlertNotifyTitle"
                        android:layout_toEndOf="@+id/textView20"
                        android:layout_toRightOf="@+id/textView20"
                        android:layout_marginTop="@dimen/Eight"
                        android:background="@drawable/rounded_button_corners_blue"
                        android:textColor="@color/white"
                        android:padding="6dp"
                        android:text="Transaction"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textSize="@dimen/Fourteen" />
                </LinearLayout>
                    
                    
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="@dimen/Eight"
                        android:layout_marginLeft="@dimen/Eight"
                        android:layout_marginRight="@dimen/Eight"
                        android:layout_marginTop="@dimen/Eight"
                        android:layout_gravity="right"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/textViewAmount"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/Eight"
                            android:gravity="right"
                            android:text="299999"
                            android:layout_marginRight="@dimen/Sixteen"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:textSize="@dimen/TwentyEight"
                            android:textStyle="bold"
                            android:textColor="@color/brand_color_dark"/>
                        

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="right">

                        <ImageView
                            android:id="@+id/notificationTypeImageView"
                            android:layout_width="@dimen/ThirtySix"
                            android:layout_height="match_parent"
                            android:src="@drawable/offline_otp_gray"
                            android:tint="@color/brand_color" />

                            <TextView
                                android:id="@+id/notificationTypeTextView"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:layout_marginLeft="@dimen/Eight"
                                android:layout_toRightOf="@id/notificationTypeImageView"
                                android:text="Push Notification"
                                android:textSize="@dimen/Fourteen" />
                        </RelativeLayout>
                        
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>

            <ImageButton
                android:id="@+id/imageButtonDelete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_marginRight="@dimen/four"
                android:layout_marginTop="@dimen/four"
                android:background="@color/defaultwhite_translucent"
                app:srcCompat="@drawable/cross_grey" />

            <ImageView
                android:id="@+id/imageViewAlertnotify"
                android:layout_width="match_parent"
                android:layout_height="@dimen/TwoHundreadEighty"
                android:layout_below="@+id/content"
                android:layout_margin="@dimen/Eight"
                android:visibility="gone"
                android:maxHeight="@dimen/HundreadTwentyEight" />

            <TextView
                android:id="@+id/textViewNotifyID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="NotifyID"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tvNotificationTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_below="@+id/imageViewAlertnotify"
                android:layout_marginBottom="@dimen/Eight"
                android:layout_marginRight="@dimen/Eight"
                android:text="few seconds"
                android:textSize="@dimen/Fourteen" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@id/tvNotificationTime"
                android:background="@color/gray">
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:orientation="horizontal"
                android:layout_below="@id/tvNotificationTime"
                android:gravity="right"
                android:weightSum="2">

                <Button
                    android:id="@+id/expiryButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Expired"
                    android:layout_margin="8dp"
                    android:background="@color/transparent"
                    android:textStyle="bold"
                    android:textColor="@color/gray_text"
                    android:layout_weight="0.1"/>

                <Button
                    android:id="@+id/declineButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="decline"
                    android:layout_margin="8dp"
                    android:background="@color/transparent"
                    android:textColor="@color/brand_color_dark"
                    android:layout_weight="0.1"/>

                <Button
                    android:id="@+id/payButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/brand_color_dark"
                    android:textColor="@color/white"
                    android:layout_margin="8dp"
                    android:text="pay"
                    android:layout_weight="0.1"/>
            </LinearLayout>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>